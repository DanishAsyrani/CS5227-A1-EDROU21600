@page
@model CS5227_A1_EDROU21600.Pages.Admin.Products.CreateModel
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">CREATE PRODUCT</h2>

		@if (Model.errorMessage.Length > 0)
		{
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<strong>@Model.errorMessage</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}
		else if (Model.successMessage.Length > 0)
		{
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<strong>@Model.successMessage</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDto.Name">
					<span asp-validation-for="ProductDto.Name" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Cuisine</label>
				<div class="col-sm-8">
					<select class="form-select" asp-for="ProductDto.Country">
						<option value="Malaysia">Malaysia</option>
						<option value="Brunei">Brunei</option>
						<option value="Korea">Korea</option>
						<option value="Thailand">Thailand</option>
					</select>
					
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Price</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDto.Price">
					<span asp-validation-for="ProductDto.Price" class="text-danger"></span>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Description</label>
				<div class="col-sm-8">
					<textarea class="form-control" asp-for="ProductDto.Description"></textarea>
					<span asp-validation-for="ProductDto.Description" class="text-danger"></span>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Image</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDto.ImageFile">
					<span asp-validation-for="ProductDto.ImageFile" class="text-danger"></span>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ImageData</label>
				<div class="col-sm-8">
					<textarea class="form-control" asp-for="ProductDto.ImageData"></textarea>
					<span asp-validation-for="ProductDto.ImageData" class="text-danger"></span>
			</div>
			<div class="row mb-3">
				<div class="offset-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" href="/Admin/Products/Index1" role="button">Cancel</a>
				</div>

			</div>
			



		</form>
	</div>
</div>